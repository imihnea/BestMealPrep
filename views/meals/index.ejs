<% include ../partials/header %> 

     <header class="jumbotron">
         <div class="container">
             <h1><span class="glyphicon glyphicon-cutlery"></span> Welcome To BestMealPrep!</h1>
             <p>This is the best website to discover new mealprep dishes!</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/meals/new">Add New Meal</a>
             </p>
              <p>
              <form action="/meals" method="GET" class="form-inline" id="meal-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Search for a meal..." class="form-control">
                </div>
              </form>
             </p>
         </div>
     </header>
     
     <div class="row text-center flex-wrap" id="meal-grid">
        <% meals.forEach(function(meal){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= meal.image %>">
                   <div class="caption">
                       <h4><%= meal.name %></h4>
                   </div>
                   <p>
                       <a href="/meals/<%= meal._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>