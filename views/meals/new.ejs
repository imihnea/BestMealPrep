<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Create a New meal</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/meals" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Burrito">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" title="Only images from i.imgur.com allowed." placeholder="https://imgur.com/..." required>
                </div>
                <div class="form-group">
                    <label for="ingredients">Ingredients</label>
                    <input class="form-control" type="text" name="ingredients" id="ingredients" placeholder="Potatoes, beans..." required>
                </div>
                <div class="form-group">
                    <label for="category">Category</label>
                    <select class="form-control" type="text" name="category" id="category" placeholder="Breakfast" required>
                        <option>Breakfast</option>
                        <option>Brunch</option>
                        <option>Lunch</option>
                        <option>Supper</option>
                        <option>Dinner</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="cost">Average Cost</label>
                    <input class="form-control" type="number" name="cost" id="cost" placeholder="9.99$" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="The perfect meal to eat at work.">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/meals">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>